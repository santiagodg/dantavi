<div class="container my-5">
  <div class="card bg-secondary p-5 w-50 mx-auto">
    <h1 class="text-center mb-3">LOG IN</h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field mb-3">
        <%= f.label :email, { class: "form-label" } %><br />
        <%= f.email_field :email, { autofocus: true, autocomplete: "current-password", class: "form-control" } %>
      </div>

      <div class="field mb-3">
        <%= f.label :password, { class: "form-label" } %><br />
        <%= f.password_field :password, { autocomplete: "current-password", class: "form-control" } %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field form-check mb-3">
          <%= f.check_box :remember_me, { class: "form-check-input" } %>
          <%= f.label :remember_me, { class: "form-check-label text-start" } %>
        </div>
      <% end %>

      <div class="actions text-center mb-3">
        <%= f.submit "LOG IN", { class: "btn btn-primary" } %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
